@model AuditManagementPortal.Models.Userdetails

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<h4 style="text-align:center;"><b>Audit Management System</b></h4>

<h5 style="text-align:center;">Manager Login</h5>
<br />
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row">
        <div style="width:100%">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" required type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="g-recaptcha" data-sitekey="6Lcs0LIaAAAAALXQUqKLRlxenIr07iFoRwTlUnrk" style="margin-left:14px;" ></div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
<p style="color:red;font-size:15px;">
@ViewBag.message
    @TempData.Peek("ErrorMessage")
    </p>
<div>
    @Html.ActionLink("clear", "Login")
</div>

<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
