@model IEnumerable<AuditManagementPortal.Models.QuestionsAndType>

@{
    ViewData["Title"] = "ShowQuestions";
    Layout = null;

}

<link href="~/css/showq.css" rel="stylesheet" />
<form asp-action="ShowQuestions">
    <h2 style="text-align:center;"><b>Audit Management System</b></h2>
    
    <h3 style="text-align:center;font-weight:bold">Please fill in the below details</h3>
    <h5 style="text-align:center;font-weight:bold">Audit Type : @Model.ElementAt(0).AuditType</h5>

    <input type="text" id="fname" name="projectname" placeholder="Project Name" required><br />
    <input type="text" id="fname" name="projectmanagername" placeholder="Project Manager Name" required pattern="^[A-Za-z ]*$"><br />
    <input type="text" id="fname" name="appownername" placeholder="Application Owner Name" required><br />


    <h4>@Model.ElementAt(0).Questions</h4>
    <div class="box">
        <input type="radio" id="q1y" name="radio1" required value="0" />
        <label for="q1y">Yes</label>

        <input type="radio" id="q1n" name="radio1" value="1" />
        <label for="q1n">No</label>
    </div>

    <h4>@Model.ElementAt(1).Questions</h4>
    <div class="box">
        <input type="radio" id="q2y" name="radio2" required value="0" />
        <label for="q2y">Yes</label>

        <input type="radio" id="q2n" name="radio2" value="1" />
        <label for="q2n">No</label>
    </div>

    <h4>@Model.ElementAt(2).Questions</h4>
    <div class="box">
        <input type="radio" id="q3y" name="radio3" required value="0" />
        <label for="q3y">Yes</label>

        <input type="radio" id="q3n" name="radio3" value="1" />
        <label for="q3n">No</label>
    </div>

    <h4>@Model.ElementAt(3).Questions</h4>
    <div class="box">
        <input type="radio" id="q4y" name="radio4" required value="0" />
        <label for="q4y">Yes</label>

        <input type="radio" id="q4n" name="radio4" value="1" />
        <label for="q4n">No</label>
    </div>
    <h4>@Model.ElementAt(4).Questions</h4>

    <div class="box">
        <input type="radio" id="q5y" name="radio5" required value="0" />
        <label for="q5y">Yes</label>

        <input type="radio" id="q5n" name="radio5" value="1" />
        <label for="q5n">No</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Get Status" class="btn btn-primary" id="showbutton" />
        <input type="button" value="Logout" class="btn btn-primary" onclick="location.href='@Url.Action("Logout","Audit")'" id="showbutton" />
    </div>
    <div>
        <p style="color:red;font-size:15px;">
        @ViewBag.Message
            </p>
    </div>
</form>